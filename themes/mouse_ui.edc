parts {

	SWALLOWCLIP();

		
	  part {								
            name: "mouse_area";						
            type: IMAGE;						
            mouse_events: 1;					
	    clip_to: "swallow_clip";   					
            description {						
               state: "default" 0.0;					
               visible: 1;						
               rel1 {							
                  relative: 0.0 0.0;					
                  offset: 0 0;						
               }							
               rel2 {							
                  relative: 1.0 1.0;					
                  offset: -1 -1;					
               }							
	       image { normal: "mouse_background.png"; }                  	
               fill { smooth: 0; } 					
            }														
         }

	TOP_BAR();
	BACK();

	part {								
            name: "mouse_switcher";						
