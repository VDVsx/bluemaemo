               rel1 {							
                  relative: 0.0 0.0;					
                  offset: 31 0;					
               }							
               rel2 {							
                  relative: 0.0 0.0;					
                  offset: 130  54;					
               }							
	       image { normal: "mouse_pressed.png"; }			                  
               fill { smooth: 0; } 					
            }								
	    description {						
               state: "clicked" 0.0;					
	       inherit: "default" 0.0;                              	
	       image { normal: "mouse_released.png"; }       		          
               fill { smooth: 0; } 					
            }								
         }	


