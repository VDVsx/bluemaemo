	//BT_HOLD();
	//SCROLL_AREA_ICONS();
	
	

     programs {
	
	program {
		name: "tap_mouse";
		signal: "tap_mouse";
		action: STATE_SET "clicked" 0.0;
		target: "bt_left";   
        }

	program {
		name: "untap_mouse";
		signal: "untap_mouse";
		action: STATE_SET "default" 0.0;
		target: "bt_left";   
        }
	program {
                name: "mouse_area_entered";
                signal: "mouse,move";
                source: "mouse_area";
		action: SIGNAL_EMIT "mouse_over_area" "mouse_area";       
        }
	program {
                name: "mouse_over_scroll";
                signal: "mouse,move";
                source: "scroll_area";
		action: SIGNAL_EMIT "mouse_over_scroll" "scroll_area";       
        }
	program {
                name: "button_release";
                signal: "mouse,up,1";
                source: "mouse_area";
		action: SIGNAL_EMIT "mouse_area_released" "mouse_area";       
        }

	program {
                name: "keyboard_switcher_pressed";
                signal: "keyboard_sw_pressed";
		action: STATE_SET "clicked" 0.0;
		target: "mouse_switcher";   
        }
	program {
                name: "activate_mouse_sw";
                signal: "activate_mouse_sw";
		action: STATE_SET "default" 0.0;
		target: "mouse_switcher";   
        }

	program {
                name: "button_hold_pressed";
                signal: "hold_pressed";
		action: STATE_SET "clicked" 0.0;
		target: "bt_hold";   
        }
        program {
                name: "button_hold_released";
                signal: "hold_released";
		action: STATE_SET "default" 0.0;   
		target: "bt_hold";       
        }
	
	ACTIVATE("bt_left");
	ACTIVATE("bt_right");
	ACTIVATE("bt_middle");
	ACTIVATE("keyboard_switcher");
	ACTIVATE("back");
	TRANSITION();
     }
 
}
   
